{
  "name": "terraform-quick-docs",
  "displayName": "Terraform Quick Docs",
  "description": "Access Terraform Docs by hovering over Resources.",
  "author": "LemurDaniel",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/LemurDaniel/PROJECT__VSCode_Extension_terraform_quick_docs"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:terraform"
  ],
  "main": "./client/src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "terraform",
        "extensions": [
          ".tf"
        ],
        "aliases": [
          "Terraform"
        ],
        "filenames": []
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Terraform Quick Docs Test",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "webpack": "webpack --mode development",
    "webpack-dev": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint ./client/src ./server/src --ext .js",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^8.35.0",
    "mocha": "^9.2.1",
    "path": "^0.12.7",
    "webpack": "^5.81.0",
    "webpack-cli": "^5.0.2"
  }
}
